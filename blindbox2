  <div class="calendar-shell">
    <div class="calendar-inner">
      <div class="top-row">
        <div class="title-block">
          <div class="calendar-title">calendar numbers</div>
          <div class="calendar-sub">
            One surprise per day ‚Ä¢ 1‚Äì31 December. Hover / tap any tile for details.
          </div>
        </div>

        <!-- Your reference image (remove this block if you don't want it visible) -->
        <div class="sample-image">
          <img src="/mnt/data/928648c5-e9e0-4162-89c4-dd5bcb353b2e.png" alt="Reference calendar design" />
        </div>
      </div>

      <div id="calendarGrid" class="calendar-grid"></div>

      <div class="calendar-legend">
        <span class="legend-item">
          <span class="legend-dot dot-past"></span> Past (claimed)
        </span>
        <span class="legend-item">
          <span class="legend-dot dot-today"></span> Today (open)
        </span>
        <span class="legend-item">
          <span class="legend-dot dot-future"></span> Locked
        </span>
      </div>
      <div class="legend-note">
        Reward text can be different for every date; edit it directly in the JavaScript config.
      </div>
    </div>
  </div>

  <script>
    // --------- CONFIG ----------
    const NOW = new Date();
    const DECEMBER = 11;          // month index (Dec)
    const USE_REAL_DATE = true;   // set to false for testing
    const demoDay = 3;            // fake "today" if not using real date

    const isDecember = NOW.getMonth() === DECEMBER;
    const todayDay = USE_REAL_DATE && isDecember ? NOW.getDate() : demoDay;

    const TOTAL_DAYS = 31;

    // icons per day to mimic your doodle style (feel free to change)
    const icons = {
      1: "‚õÑ",  2: "üéÅ",  3: "‚ùÑÔ∏è",  4: "üéÅ",  5: "üéÅ",  6: "üéÑ",
      7: "üî¥",  8: "‚≠ê",  9: "üç≠", 10: "üéÅ", 11: "‚ùÑÔ∏è",
      12: "üéÖ", 13: "‚ùÑÔ∏è", 14: "‚≠ê", 15: "üß¢", 16: "‚ùÑÔ∏è",
      17: "üå≤", 18: "‚≠ê", 19: "üçí", 20: "‚≠ê", 21: "üîî",
      22: "üéÑ", 23: "üéÖ", 24: "‚≠ê", 25: "üç™", 26: "‚≠ê",
      27: "üéÅ", 28: "üîî", 29: "üéÑ", 30: "‚≠ê", 31: "üß¶"
    };

    // Tooltip / reward description per day
    const rewards = {
      1: "Up to 100 Free Spins<br>VIP 01‚Äì03: 20 FS<br>VIP 04‚Äì05: 50 FS<br>VIP 06+: 100 FS",
      2: "Coin Pack ‚Äì up to 500M<br>VIP 01‚Äì03: 80M<br>VIP 04‚Äì05: 200M<br>VIP 06+: 500M",
      3: "Epic Loot Crate ‚Äì up to 3x epic items.",
      4: "Turnover Boost ‚Äì up to 2x turnover for 2 hours.",
      5: "Energy Rush ‚Äì bonus raid/attack energy.",
      6: "Super Tree Pack ‚Äì coins + spins.",
      // ...you can fill all days here
    };

    const grid = document.getElementById("calendarGrid");

    function createTile(day) {
      const tile = document.createElement("button");
      tile.type = "button";
      tile.className = "day-tile";

      const state =
        day < todayDay ? "past" :
        day === todayDay ? "today" :
        "future";
      tile.classList.add(state);

      const tooltipHtml = rewards[day] || "Reward details coming soon ‚Äì ask support if you are not sure.";

      let stateLabel = "Locked";
      if (state === "past") stateLabel = "Claimed";
      if (state === "today") stateLabel = "Today";

      tile.innerHTML = `
        <div class="tile-inner">
          <div class="tile-header">
            <div class="tile-icon">${icons[day] || "üéÑ"}</div>
            <div class="tile-number">${day}</div>
          </div>
          <div class="tile-footer">
            <div class="state-pill ${state === "today" ? "today-pill" : ""}">
              ${stateLabel}
            </div>
            <div style="display:flex;align-items:center;gap:2px;">
              <div class="info-badge">i</div>
              ${state === "future" ? '<span class="lock-icon">üîí</span>' : ""}
            </div>
          </div>
        </div>
        <div class="tooltip">${tooltipHtml}</div>
      `;

      return tile;
    }

    for (let day = 1; day <= TOTAL_DAYS; day++) {
      grid.appendChild(createTile(day));
    }
  </script>
